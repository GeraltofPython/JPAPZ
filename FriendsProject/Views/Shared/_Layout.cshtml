<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Site.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container">
            <a class="navbar-brand nav-pad" href="../Home/Index" id="nav-title">JPAPZ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item nav-pad">
                        <a class="nav-link active" href="../Home/Index">Home</a>
                    </li>
                    <li class="nav-item nav-pad">
                        <a class="nav-link" href="../Friends/Josh">Josh</a>
                    </li>
                    <li class="nav-item nav-pad">
                        <a class="nav-link" href="../Friends/Paul">Paul</a>
                    </li>
                    <li class="nav-item nav-pad">
                        <a class="nav-link" href="../Friends/Armani">Armani</a>
                    </li>
                    <li class="nav-item nav-pad">
                        <a class="nav-link" href="#">Penny</a>
                    </li>
                    <li class="nav-item nav-pad">
                        <a class="nav-link" href="#">Zaid</a>
                    </li>
                    <!--
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                    </li>
                        -->
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container fixed-bottom">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
